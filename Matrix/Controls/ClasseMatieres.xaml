<UserControl x:Class="Matrix.Controls.ClasseMatieres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" Width="650">

    
    <DockPanel >
        <Grid DockPanel.Dock="Top" Height="30" Background="#25A0DA" >
            <TextBlock Text="MATIERES" Foreground="White" Margin="30,0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontFamily="League Gothic"/>
            <CheckBox Name="CHECK_BOX" Content="TOUS" Margin="30,0" Foreground="White" Background="#D8DBDD" HorizontalAlignment="Right" Click="CHECK_BOX_OnClick"/>
        </Grid>
        <Border BorderThickness="0" Background="Transparent">
            <ListBox Name="MATIERES_LIST" Style="{DynamicResource MatiereStyle}" SelectionChanged="MATIERES_LIST_OnSelectionChanged" MouseDoubleClick="MATIERES_LIST_OnMouseDoubleClick"/>
        </Border>
    </DockPanel>



</UserControl>
